{% extends 'base.twig' %}

{% block body %}
<div class="picture-loader-container">
    <form enctype="multipart/form-data" method="post" action="/api/article/changePictureById?id={{ id }}">
        <div class="mb-3">
            <label for="formFile" class="form-label">Выбирете новую картинку</label>
            <input name="picture" class="form-control" type="file" id="formFile">
            <div class="change-picture-submit">
                <button type="submit" class="btn btn-primary mb-2 "> Изменить картинку </button>
            </div>
        </div>
    </form>
</div>

{% endblock %}